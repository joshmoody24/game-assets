---
layout: layouts/base.njk
---

<div class="row">
    <div class="col-md-6">
        <img class="w-100 mb-3 rounded shadow" title="{{ title }} header image" src="/img/{{ title | slugify }}-header.webp" />
    </div>
    <div class="col-md-6">
        <h1>{{ title }}</h1>
        {{ content | safe }}

        {% if ext in ['mp3', 'wav', 'ogg'] %}
        <audio class="d-block mb-3" controls>
            <source src="/files/{{ title | slugify }}.{{ ext | slugify }}" type="audio/{{ ext }}">
            Your browser does not support the audio element.
        </audio>
        {% endif %}

        <a class="btn btn-success" href="/files/{{ title | slugify }}.{{ ext | slugify }}" download="{{ title }}.{{ ext }}" data-umami-event="Download {{ title }}">
            Download Asset
        </a>
    </div>
</div>