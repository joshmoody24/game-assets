---
layout: layouts/base.njk
---

<div class="row">
    <div class="col-md-6">
        <img class="w-100 mb-3 rounded shadow" title="{{ title }} header image" src="/files/{{ title | slugify }}-header.webp" />
    </div>
    <div class="col-md-6">
        <h1>{{ title }}</h1>
        {{ content | safe }}
        <a class="btn btn-success" href="/files/{{ title | slugify }}.{{ ext | slugify }}" download="{{ title }}.{{ ext }}">
            Download Asset
        </a>
    </div>
</div>